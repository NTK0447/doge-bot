# ==============================
# .env.example
# ==============================
# このファイルは参照用です。
# 開発環境（プロジェクト直下の .env）と
# 本番環境（env/.env）の両方の用途を説明します。

# --- 開発環境 (直下 .env に記載) ---
# 開発ではシンプルに。APIキーやWebhookは書かない。
DRY_RUN=true
POLL_SEC=15
ORDER_SIZE=100
SYMBOL=DOGEUSDT

# --- 本番環境 (env/.env に記載) ---
# Bybit API 認証
# BYBIT_API_KEY=your_api_key_here
# BYBIT_API_SECRET=your_api_secret_here

# Discord通知（任意）
# 通常ログ通知
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx/yyyyy
# Nightly Patch Backup通知
# DISCORD_PATCH_WEBHOOK=https://discord.com/api/webhooks/xxxxx/yyyyy

# 動作設定
LOG_LEVEL=INFO
LEVERAGE=50

# 暴走抑止
MAX_OPEN_ORDERS=3
POSITION_COOLDOWN_SEC=30
ALLOW_PYRAMID=false
NET_CAP=2000

# 追撃設定
RETRY_UNFILLED_ORDER=3
LIMIT_SLIPPAGE_PCT=0.05

# サーキットブレーカ
CB_THRESHOLD_PCT=1.5
CB_LOOKBACK_SEC=10

# ===== 戦略パラメータ（strategy01用） =====
STRATEGY_NAME=strategy01
RSI_PERIOD=14
SMA_FAST=9
SMA_SLOW=21
BBANDS_PERIOD=20
BBANDS_STDDEV=2
ATR_PERIOD=14
TP_PCT=1.0
SL_PCT=0.8

# 利確・損切（任意）
TAKE_PROFIT_PCT=0.03
STOP_LOSS_PCT=0.01

# インターバル
INTERVAL=1
